<div class="head">
  <!-- header -->
  <div class="ml-auto text-right p-5 w-50 text-pink">
    <h1>Please consult and ask</h1> <br>
    <h3>First free! provides an opportunity <br> to be assured</h3>
    <% if user_signed_in? %>
      <%= link_to 'Register course', new_course_path, class: "btn btn-info px-4 text-white btn-lg" %>
    <% else %>
      <%= link_to 'Get started', new_user_registration_path, class: "btn btn-info px-4 text-white btn-lg" %>
    <% end %>
  </div>
</div>
<!-- end of header division -->

<!-- middle section -->
<div class="my-4 text-center">
  <h4>Learn A programming skill of your choice!!</h4>
  <div class="my-4">

  </div>
</div>


<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Info title</th>
      <th>Info details</th>
      <th>Free info topics</th>
      <th>Free info details</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.info_title %></td>
        <td><%= course.info_details %></td>
        <td><%= course.free_info_topics %></td>
        <td><%= course.free_info_details %></td>
        <td><%= course.price %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
