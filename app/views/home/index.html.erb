<div class="head">
  <!-- header -->
  <div class="ml-auto text-right p-5 w-50 text-pink">
    <h1 class="text-right"><%= t('home.index.first') %> </h1> <br>
    <h3><%= t('home.index.second') %>  <br> <%= t('home.index.third') %> </h3>

    <% if user_signed_in? %>
      <% if current_user.user_type == 'Teacher' %>
        <%= link_to 'Register course', new_course_path, class: "btn btn-info px-4 text-white btn-lg" %>
      <% end %>
    <% else %>
      <%= link_to 'Get started', new_user_registration_path, class: "btn btn-info px-4 text-white btn-lg" %>
    <% end %>
  </div>
</div>
<!-- end of header division -->

<!-- middle section -->
<div class="my-4 text-center mx-5 row">
  <div class="col col-sm-6 col-md-8">
    <h4>You can choose a best tutor to work with!!</h4>
      <div class="row row-cols-1 row-cols-md-3">
      <% @teachers.each do |teacher| %>
        <div class="col mb-4">
          <div class="card h-100 shadow-sm">
            <% if teacher.profile_image.url %>
              <%= image_tag teacher.profile_image.url, class: "card-img-top" %>
            <% else %>
              <%= image_tag "user_icon.png", class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to teacher.name, user_path(teacher)%></h5>
              <span class="card-text">
                <%= teacher.self_introduction %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col most-followed border-left bg-light col-6 col-md-4">
    <h5 class="mt-2 text-info">Most followed courses</h5>
    <% @most_liked.each do |course| %>
    <%= link_to course_path(course) do %>
    <div class="card mx-auto bg-light shadow-sm m-2" style="width: 100%;">
      <div class="card-body p-2">
        <div class="card-title">
          <h6 class="w-50 float-left text-success text-left"><%= course.info_title %></h6>
          <h6 class="w-50 float-right text-right text-warning">Buy: <%= course.price %>$</h6>
        </div>
          <p class="card-text text-left"><%= course.info_details %></p>
      </div>
    </div>
    <% end %>

    <% end %>
  </div>

</div>
<!-- end of middle section -->

<div class="last bg-light p-5 mx-5 text-info">
  <h3 class="text-center text-info"><strong>It is easy with First Time Free @tech</strong></h3>
  <div class="card-deck mt-5 text-info">
    <div class="small_image text-center bg-light card border-0">
      <%= image_tag ("srch.svg"), class: "card-img-top m-auto"%>

      <div class="card-body">
        <h5 class="card-title">Search a course</h5>
        <p class="card-text">Use the search for a course of your choice</p>
      </div>
    </div>
    <div class="small_image text-center bg-light card border-0">
      <%= image_tag ("select.svg"), class: "card-img-top m-auto"%>

      <div class="card-body">
        <h5 class="card-title">Select</h5>
        <p class="card-text">Select a course, see course details!</p>
      </div>
    </div>
    <div class="small_image text-center bg-light card border-0">
      <%= image_tag ("talk.svg"), class: "card-img-top m-auto"%>

      <div class="card-body">
        <h5 class="card-title">Contact</h5>
        <p class="card-text">Talk to the teacher of the course and start learning</p>
      </div>
    </div>
    <div class="small_image text-center bg-light card border-0">
      <%= image_tag ("learn.svg"), class: "card-img-top m-auto"%>

      <div class="card-body">
        <h5 class="card-title">Buy a course</h5>
        <p class="card-text">If you like the way you are working with your teacher. You may buy the course and keep learning!</p>
      </div>
    </div>
  </div>
  <hr class="text-info">
  <div class="my-2 text-info  text-center">
    <h4><strong>Payment made easy with your creadit card!!!</strong></h4>
    <div class="card-deck text-info">
      <div class="medium_image text-center bg-light card border-0">
        <%= image_tag ("visa.png"), class: "card-img-top m-auto"%>
      </div>
      <div class="medium_image text-center bg-light card border-0">
        <%= image_tag ("mastercard.png"), class: "card-img-top m-auto"%>
      </div>
      <div class="medium_image text-center bg-light card border-0">
        <%= image_tag ("UnionPay_logo.svg"), class: "card-img-top m-auto"%>
      </div>
    </div>
  </div>
</div>
