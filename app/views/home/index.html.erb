<div class="head">
  <!-- header -->
  <div class="ml-auto text-right p-5 w-50 text-pink">
    <h1>Please consult and ask</h1> <br>
    <h3>First free! provides an opportunity <br> to be assured</h3>
    <% if user_signed_in? %>
      <%= link_to 'Register course', new_course_path, class: "btn btn-info px-4 text-white btn-lg" %>
    <% else %>
      <%= link_to 'Get started', new_user_registration_path, class: "btn btn-info px-4 text-white btn-lg" %>
    <% end %>
  </div>
</div>
<!-- end of header division -->

<!-- middle section -->
<div class="my-4 text-center">
  <h4>Learn A programming skill of your choice!!</h4>
  <div class="my-4 w-75 h-50 m-auto bg-white">
    teachers
    <% @teachers.each do |teacher| %>
    <div class="card mb-3 m-auto" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= teacher.profile_image %>
        </div>
        <div class="col-md-8">
          <div class="card-body text-left">
            <h5 class="card-title"><%= teacher.name %></h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
