
<div class="h-75 mx-auto my-4 w-50 border rounded text-center shadow bg-light p-4">
  <h6>Login with your account!</h6>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">

      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"Email", class: "form-control w-75 m-auto", name: "email" %>
    </div>

    <div class="field">

      <%= f.password_field :password, autocomplete: "current-password" ,placeholder:"Password", class: "form-control w-75 m-auto", name: "password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field text-left w-75 m-auto">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actionss">
      <%= f.submit "Log in", class: "btn btn-info shadow-sm m-auto w-50"%>
    </div>
  <% end %>
  <div class="row w-75 m-auto">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "mr-auto text-info" %>
    <% end %>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      If you don't have account yet, <%= link_to "Sign up", new_registration_path(resource_name), class: "text-info" %>
    <% end %>

  </div>
<div class="my-4">
  <h6>OR</h6>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn bg-google w-75 rounded-pill text-white" %><br />
    <% end %>
  <% end %>

</div>

</div>
