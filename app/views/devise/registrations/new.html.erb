<div class="sign_up">
<div class = "register">
 <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'register') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :profile_image %><br />
      <%= f.file_field :profile_image %>
    </div>

    <div class="field">
    
     
    
      <%= f.text_field :name, autofocus: true, autocomplete: "user name" ,placeholder:"Full Name",class: "form-control"%>

    </div>

    <div class="field">
    
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email",class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select :gender, [ 'Male', 'Female'] ,class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :user_type %><br />
      <%= f.select :user_type, [ 'Teacher', 'Learner'] ,class: "form-control"%>
    </div>

    <div class="field">
    
      <%= f.text_field :hobbies, autofocus: true, autocomplete: "user hobbies" ,placeholder:"hobbies",class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :skills %><br />
      <%= f.text_field :skills, autofocus: true, autocomplete: "user skills if any" ,placeholder:"fill it when you are teacher",class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :qualification %><br />
      <%= f.text_field :qualification, autofocus: true, autocomplete: "user qualification" ,placeholder:"concerned to teacher only",class: "form-control"%>
    </div>

    <div class="field">
   
      <%= f.number_field :age, autofocus: true, autocomplete: "user age",placeholder:"age" ,class: "form-control"%>
    </div>

    <div class="field">
    
      <%= f.text_field :self_introduction, autofocus: true, autocomplete: "user name" ,placeholder:"self_introduction",class: "form-control"%>
    </div>


    <div class="field">
     
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",placeholder:"password",class: "form-control" %>
    </div>

    <div class="field">
  
      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"password_confirmation",class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:"sign_up_btn"%>
    </div>
  <% end %>
Already have account?
  <%= render "devise/shared/links" %>
</div>
</div>