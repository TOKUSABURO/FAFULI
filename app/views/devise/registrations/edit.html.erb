<div class="container">


  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <div class="w-75 p-4 m-auto bg-light border rounded shadow">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :profile_image, "Change profile image" %>
        <%= image_tag(@user.profile_image.url) if @user.profile_image && @user.profile_image.url %><br>
        <%= f.file_field :profile_image, class: "my-2 btn"%>
        <%= f.hidden_field :profile_image_cache, class: "form-control"%>
      </div>

      <div class="form-row form-group">
        <div class="col">
          <%= f.text_field :name, autofocus: true, autocomplete: "user name" ,placeholder:"Full Name",class: "form-control"%>
        </div>
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email",class: "form-control" %>
        </div>
      </div>

      <div class="form-inline">
        <div class="field mr-5">
          <%= f.label :gender %>
          <%= f.select :gender, [ 'Male', 'Female']%>
        </div>
      </div>

      <div class="form-row form-group">
        <div class="col">
          <%= f.number_field :age, autofocus: true, autocomplete: "user age",placeholder:"age" ,class: "form-control"%>
        </div>
        <div class="col">
          <%= f.text_field :hobbies, autofocus: true, autocomplete: "user hobbies" ,placeholder:"hobby",class: "form-control"%>
        </div>
      </div>
      <div class="border p-2 form-group">
        <h5 class="text-secondary">Optional</h5>
        <div class="form-row">
          <div class="col">
            <%= f.password_field :password, autocomplete: "new-password",placeholder:"password (Minimum 6 characters)",class: "form-control" %>
          </div>
          <div class="col">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"password_confirmation",class: "form-control" %>
          </div>
        </div>
      </div>

      <% if current_user.user_type == "Teacher" %>
      <div class="border rounded p-2 mt-4">
      <div class="field">
        <%= f.label :skills %>
        <%= f.text_field :skills, autofocus: true,placeholder:"Eg:(programming)",class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :qualification %>
        <%= f.text_field :qualification, autofocus: true, placeholder:"Eg: (front end programming with html/css and javascript)",class: "form-control"%>
      </div>


      <div class="field">
        <%= f.label :self_introduction, "Introduce your self" %>
        <%= f.text_area :self_introduction, placeholder:"Short description about you!",class: "form-control", rows: "4"%>
      </div>
      </div>
      <% end %>
    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-50" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update", class: "btn btn-info w-25 shadow m-auto" %>
    </div>
  <% end %>

  <p>Unhappy? <strong><%= link_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text-danger" %></strong></p>
  </div>
</div>
